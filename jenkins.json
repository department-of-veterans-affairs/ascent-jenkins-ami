{
    "variables": {
        "aws_access_key": "",
        "aws_secret_key": "",
        "aws_region": "us-gov-west-1",
        "vault_token": "",
        "vault_addr": "",
        "subnet_id": "",
        "base_ami_id": "",
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "region": "{{user `aws_region`}}",
            "source_ami": "{{user `base_ami_id`}}",
            "subnet_id": "subnet-025d7a67",
            "security_group_id": "sg-a7df9cc2",
            "instance_type": "t2.micro",
            "ssh_username": "ec2-user",
            "ssh_pty": true,
            "ami_name": "ascent-jenkins-master {{timestamp}}",
            "launch_block_device_mappings": [
                {
                    "device_name": "/dev/sda1",
                    "volume_size": 10,
                    "volume_type": "gp2",
                    "delete_on_termination": true
                }
            ],
            "tags": {
                "name": "ascent-jenkins-master"
            },
            "snapshot_tags": {
                "name": "ascent-jenkins-master"
            }
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "config",
            "destination": "~/config"
        },
        {
            "type": "file",
            "source": "template",
            "destination": "~/template"
        },
        {
            "type": "file",
            "source": "plugins.txt",
            "destination": "~/plugins.txt"
        },
        {
            "type": "file",
            "source": "install-jenkins.sh",
            "destination": "~/install-jenkins.sh"
        },
        {
            "type": "shell",
            "scripts": [
                "install-java.sh",
                "install-tools.sh"
            ]
        },
        {  
            "type": "shell",
            "inline": [
                  "chmod 755 ~/install-jenkins.sh",
                  "sudo /bin/bash ~/install-jenkins.sh {{user `vault_addr`}} {{user `vault_token`}}"
            ]
        },
        {
            "type": "shell",
            "scripts": [
                "configure-jenkins.sh"
            ]
        }
    ]
}
